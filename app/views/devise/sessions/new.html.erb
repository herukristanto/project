<div class="kotak2">
	<div class="container">
		  <div class="konten">

          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-group">
              <div class="input-group">

                <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'form-control border-left-none border-top-none border-right-none box-shadow-none', placeholder:"Email" %>
                <div class="invalid-feedback">Oops, you missed this one.</div>
              </div>
            </div>

            <div class="form-group">
              <div class="input-group">

                <%= f.password_field :password, autocomplete: "current-password", class:'form-control border-left-none border-top-none border-right-none box-shadow-none', placeholder:"Password"%>
                <div class="invalid-feedback">Enter your password too!</div>
              </div>
            </div>

            <% if devise_mapping.rememberable? -%>


            <% end -%>
            <div class="actions">
              <%= f.submit "Login", class:'btn btn-rounded float-right'%>
            </div>
          <% end -%>

        </div>


	</div>
</div>

</body>
