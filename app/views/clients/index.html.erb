<%= render 'navigation' %>

<div class="limiter">
		<div class="container-table100">
			<div class="wrap-table100">
				<div class="table100">
					<table>
						<thead>
							<tr class="table100-head">
								<th class="column1">Clients</th>
								<th class="column2">Project</th>
								<th class="column3">Staging URL</th>
								<th class="column4">Username</th>
								<th class="column5">Password</th>
								<th class="column6">Production URL</th>
							</tr>
						</thead>
						<tbody>
              <% @clients.each do |client| %>
								<tr>
									<td class="column1">
                    <%= client.name %>
                  </td>
									<td class="column2">
                    <% client.projeks.each do |pj| %>
                      <%= pj.name %>
                    <% end %>
                  </td>
									<td class="column3">
                    <% client.projeks.each do |pj| %>
                      <a href="<%= pj.staging_url %>"><%= pj.staging_url %></a><br>
                    <% end %>
                  </td>
									<td class="column4">
                    <% client.projeks.each do |pj| %>
                      <%= pj.username %>
                    <% end %>
                  </td>
									<td class="column5">
                    <% client.projeks.each do |pj| %>
                      <%= pj.password %> <br>
                    <% end %>
                  </td>
									<td class="column6">
                    <% client.projeks.each do |pj| %>
                    <a href="<%= pj.production_url %>"><%= pj.production_url %></a><br>
                    <% end %>
                  </td>
								</tr>
              <% end %>
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
